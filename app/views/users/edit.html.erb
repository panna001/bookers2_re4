<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= render "layouts/error", model:@user %>
      <h1>User info</h1>
      <div class="form-group">
        <%= form_with model: @user, local: true do |f| %>
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control mb-3" %>
          <%= f.label :profile_image, "Image" %>
          <%= f.attachment_field :profile_image, class: "d-block mb-3" %>
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_field :introduction, class: "form-control mb-3" %>
          <%= f.submit class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>