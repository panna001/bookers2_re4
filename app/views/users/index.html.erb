<%= render "layouts/user_info", user:@user %>
<%= render "layouts/new_book", book:@book %>

<h1>Users</h1>
<table class="table">
  <thead>
    <th>image</th>
    <th>name</th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>