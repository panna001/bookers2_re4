<h1>New book</h1>
<div class="form-group">
  <%= form_with model: book, local: true do |f| %>
    <%= f.label "Title", :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label "Opinion", :body %>
    <%= f.text_field :body, class: "form-control" %>
    <%= f.submit %>
  <% end %>
</div>