<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>follows</th>
      <td><%= link_to user.relationships.count, follows_user_path(user) %></td>
    </tr>
    <tr>
      <th>followers</th>
      <td><%= link_to user.reverse_relationships.count, followers_user_path(user) %></td>
    </tr>
  </tbody>
</table>
<% if user == current_user %>
  <%= link_to edit_user_path(user), class: "btn btn-sm btn-block btn-outline-secondary" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>